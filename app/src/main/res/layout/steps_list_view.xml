<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_id_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/steps_list_view_text_view_layout_margin"
        android:drawableStart="@drawable/ic_play_circle_outline_black_24dp"
        android:drawablePadding="@dimen/steps_list_view_text_view_drawable_padding"
        android:textAlignment="viewStart"
        android:textColor="@color/colorSecondaryText"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="@android:string/yes" />

</LinearLayout>